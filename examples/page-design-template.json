{
  "config": {
    "lti_tool_title": "A title for the LTI tool, this will be visible in the Canvas UI. Example: Page Design (Preview)",
    "lti_registration_id": "The registration id for the tool. Example: universityofoxford-pd-preview",
    "lti_account_id": "The testing subaccount id to install the LTI tool after setting the developer keys. Example: 11370",
    "lti_target_link_uri": "The LTI tool url. Example: https://localhost:3000/banner-editor.html"
  },
  "ltiKey": {
    "tool_configuration": {
      "settings": {
        "public_jwk": {},
        "title": "$LTI_TOOL_TITLE",
        "description": "Pick or upload a banner image to import and display on a page",
        "target_link_uri": "$LTI_TOOL_URL",
        "oidc_initiation_url": "$LTI_SERVER_URL/lti/login_initiation/",
        "public_jwk_url": "$LTI_SERVER_URL/.well-known/jwks.json",
        "scopes": [],
        "extensions": [
          {
            "platform": "canvas.instructure.com",
            "settings": {
              "placements": [
                {
                  "placement": "editor_button",
                  "message_type": "LtiDeepLinkingRequest",
                  "icon_url": "https://your.lti.tool.url/banner-logo.svg",
                  "text": "$LTI_TOOL_TITLE"
                }
              ]
            },
            "privacy_level": "public"
          }
        ],
        "custom_fields": {
          "canvas_course_id": "$Canvas.course.id",
          "canvas_api_base_url": "$Canvas.api.baseUrl",
          "canvas_user_prefers_high_contrast": "$Canvas.user.prefersHighContrast",
          "com_instructure_brand_config_json_url": "$com.instructure.brandConfigJSON.url"
        }
      }
    },
    "developer_key": {
      "name": "$LTI_TOOL_TITLE",
      "redirect_uris": "$LTI_SERVER_URL/lti/login",
      "scopes": []
    }
  },
  "apiKey" : {
    "developer_key": {
    "name": "$LTI_TOOL_TITLE",
    "require_scopes": true,
    "redirect_uris" : "$PROXY_SERVER_URL/login/oauth2/code/$LTI_REGISTRATION_ID",
    "scopes": [
      "url:POST|/api/v1/courses/:course_id/files",
      "url:POST|/api/v1/files/:id",
      "url:PUT|/api/v1/courses/:course_id/usage_rights"
    ]
    }
  },
  "toolReg": {
    "id": "b4337e6c-abdc-4274-8922-2891565f74d3",
    "lti": {
        "registrationId": "$LTI_REGISTRATION_ID",
        "clientName": "$LTI_TOOL_TITLE",
        "clientId": "$LTI_DEV_ID",
        "clientSecret": "$LTI_DEV_KEY",
        "clientAuthenticationMethod": "client_secret_basic",
        "authorizationGrantType": "implicit",
        "redirectUri": "{baseUrl}/lti/login",
        "scopes": [
            "openid"
        ],
        "providerDetails": {
            "authorizationUri": "$CANVAS_PROVIDER_URL/api/lti/authorize_redirect",
            "tokenUri": "$CANVAS_PROVIDER_URL/login/oauth2/token",
            "userInfoEndpoint": null,
            "jwkSetUri": "$CANVAS_PROVIDER_URL/api/lti/security/jwks",
            "issuerUri": null,
            "configurationMetadata": {}
        }
    },
    "proxy": {
        "registrationId": "$LTI_REGISTRATION_ID",
        "clientName": "$LTI_TOOL_TITLE",
        "clientId": "$API_DEV_ID",
        "clientSecret": "$API_DEV_KEY",
        "clientAuthenticationMethod": "client_secret_post",
        "authorizationGrantType": "authorization_code",
        "redirectUri": "{baseUrl}/login/oauth2/code/{registrationId}",
        "scopes": [
          "url:POST|/api/v1/courses/:course_id/files",
          "url:POST|/api/v1/files/:id",
          "url:PUT|/api/v1/courses/:course_id/usage_rights"
        ],
        "providerDetails": {
            "authorizationUri": "$CANVAS_URL/login/oauth2/auth",
            "tokenUri": "$CANVAS_URL/login/oauth2/token",
            "userInfoEndpoint": null,
            "jwkSetUri": null,
            "issuerUri": null,
            "configurationMetadata": {}
        }
    },
    "origins": [
        "$LTI_TOOL_URL"
    ],
    "sign": true,
    "secret": null,
    "issuer": "$LTI_SERVER_URL",
    "nrpsAllowedRoles": []
  }
}